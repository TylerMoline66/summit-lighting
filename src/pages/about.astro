<style>
  .about-hero {
    background: linear-gradient(135deg, var(--evergreen-shadow), var(--midnight-summit-navy));
    padding: var(--space-12) var(--space-6);
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .about-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(12, 26, 43, 0.9), rgba(26, 42, 58, 0.9));
    opacity: 0.7;
  }

  .about-hero-content {
    position: relative;
    z-index: 1;
    max-width: 800px;
    margin: 0 auto;
  }

  .about-hero-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: var(--space-4);
    background: linear-gradient(135deg, var(--frost-white), var(--warm-amber-glow));
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .about-hero-text {
    font-size: 1.25rem;
    line-height: 1.7;
    color: var(--color-text-muted);
  }

  /* Stats Section */
  .about-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-6);
    padding: var(--space-12) var(--space-6);
    max-width: var(--container);
    margin: 0 auto;
  }

  .stat-card {
    text-align: center;
    padding: var(--space-6);
    background: linear-gradient(135deg, rgba(12, 26, 43, 0.6), rgba(26, 42, 58, 0.6));
    border-radius: var(--radius-lg);
    border: 1px solid rgba(201, 162, 74, 0.2);
    transition: all 0.3s ease;
  }

  .stat-card:hover {
    transform: translateY(-4px);
    border-color: var(--warm-amber-glow);
    box-shadow: 0 8px 24px rgba(201, 162, 74, 0.3);
  }

  .stat-number {
    font-size: 3rem;
    font-weight: 700;
    color: var(--warm-amber-glow);
    margin-bottom: var(--space-2);
  }

  .stat-label {
    font-size: 1rem;
    color: var(--color-text-muted);
    font-weight: 600;
  }

  /* Values Section */
  .our-values-section {
    padding: var(--space-12) var(--space-6);
    max-width: var(--container);
    margin: 0 auto;
  }

  .section-title {
    text-align: center;
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: var(--space-8);
    color: var(--color-text);
  }

  .values-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-6);
  }

  .value-card {
    padding: var(--space-6);
    background: linear-gradient(135deg, rgba(12, 26, 43, 0.6), rgba(26, 42, 58, 0.6));
    border-radius: var(--radius-lg);
    border: 1px solid rgba(201, 162, 74, 0.2);
    text-align: center;
    transition: all 0.3s ease;
  }

  .value-card:hover {
    transform: translateY(-6px);
    border-color: var(--warm-amber-glow);
    box-shadow: 0 12px 32px rgba(201, 162, 74, 0.2);
  }

  .value-icon {
    font-size: 3rem;
    margin-bottom: var(--space-4);
  }

  .value-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: var(--space-3);
    color: var(--color-text);
  }

  .value-card p {
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  /* Story Section */
  .our-story-section {
    padding: var(--space-12) var(--space-6);
    max-width: 800px;
    margin: 0 auto;
    margin-top: 6rem;
  }

  .story-content {
    background: linear-gradient(135deg, rgba(12, 26, 43, 0.6), rgba(26, 42, 58, 0.6));
    padding: var(--space-8);
    border-radius: var(--radius-lg);
    border: 1px solid rgba(201, 162, 74, 0.2);
  }

  .story-text {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--color-text-muted);
    margin-bottom: var(--space-4);
  }

  .story-text:last-child {
    margin-bottom: 0;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .about-hero-title {
      font-size: 2rem;
    }

    .about-hero-text {
      font-size: 1.1rem;
    }

    .about-stats {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-4);
      padding: var(--space-8) var(--space-4);
    }

    .stat-number {
      font-size: 2rem;
    }

    .section-title {
      font-size: 2rem;
    }

    .values-grid {
      grid-template-columns: 1fr;
    }

    .story-content {
      padding: var(--space-6);
    }
  }

  @media (max-width: 480px) {
    .about-hero {
      padding: var(--space-8) var(--space-4);
    }

    .about-hero-title {
      font-size: 1.75rem;
    }

    .stat-number {
      font-size: 1.75rem;
    }

    .stat-label {
      font-size: 0.9rem;
    }
  }
</style>
